package item

import (
	"path"
	"alc/model/store"
	"alc/view/layout"
	"alc/view/component"
)

templ Show(cat store.Category, items []store.Item) {
	@layout.BaseAdmin(cat.Name) {
		<!-- Dialogs -->
		<div>
			<!-- New item dialog -->
			<dialog
				class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 m-0 p-6 w-[90%] max-w-lg border border-black bg-white"
				hx-on::after-swap="this.showModal();"
				hx-on::after-request="this.close();"
			>
				<form class="flex justify-between" method="dialog">
					<h2 class="font-bold text-2xl">Nuevo item</h2>
					<button class="font-bold text-azure" type="submit">Salir</button>
				</form>
				<div id="insert-item-form"></div>
			</dialog>
			<!-- Update item dialog -->
			<dialog
				class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 m-0 p-6 w-[90%] max-w-lg border border-black bg-white"
				hx-on::after-swap="this.showModal();"
				hx-on::after-request="this.close();"
			>
				<form class="flex justify-between" method="dialog">
					<h2 class="font-bold text-2xl">Editar item</h2>
					<button class="font-bold text-azure" type="submit">Salir</button>
				</form>
				<div id="update-item-form"></div>
			</dialog>
			<!-- Delete item dialog -->
			<dialog
				class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 m-0 p-6 w-[90%] max-w-lg border border-black bg-white"
				hx-on::after-swap="this.showModal();"
				hx-on::after-request="this.close();"
			>
				<form class="flex justify-between" method="dialog">
					<h2 class="font-bold text-2xl">¿Estás seguro?</h2>
					<button class="font-bold text-azure" type="submit">Salir</button>
				</form>
				<div id="delete-item-form"></div>
			</dialog>
		</div>
		<main>
			<!-- Navigation -->
			<div>
				<span class="font-semibold text-azure"><a href="/admin">Administración</a></span>
				@component.IconRight()
				<span class="font-semibold text-azure"><a href="/admin/tienda">Tienda</a></span>
				@component.IconRight()
				<span class="font-semibold text-azure">
					<a href={ templ.URL(path.Join("/admin/tienda/type", cat.Type.ToSlug(), "categories")) }>{ type2Title(cat.Type) }</a>
				</span>
				@component.IconRight()
				<span class="text-livid">{ cat.Name }</span>
			</div>
			<!-- Title -->
			<h1 class="mt-3 font-bold text-3xl">Items</h1>
			<!-- Control buttons -->
			<div>
				<button
					class="font-semibold text-azure"
					hx-get={ path.Join("/admin/tienda/type", cat.Type.ToSlug(), "categories", cat.Slug, "items/insert") }
					hx-target="#insert-item-form"
				>
					Nuevo item
				</button>
			</div>
			<!-- Items show table -->
			<div id="table-items">
				@Table(cat, items)
			</div>
		</main>
	}
}

func type2Title(t store.Type) string {
	return "Manga"
}
